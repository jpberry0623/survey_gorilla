<div class="container">
  <div class="content">
    <div class="homeh1"><h1> Welcome to Survey  Gorilla! </h1>
    </div>
    <div class="survey">
      <h1> Public Surveys</h1>
      <dl>
      <% @surveys.each do |survey| %>
        <dt><a href="/surveys/<%= survey.id %>"> <%= survey.name %> </a></dt>
          <br>
         <dd> Created by: <%= survey.get_user %></dd>
          <br><br>
      <% end %>
      </dl>
    </div>
    <div class="todo">
      <h3>What would you like to do?</h3>
      <ul>
        <% if @user = session[:user_id]%>
        <li><a href="/surveys/all">Take a Survey</a></li>
        <li><a href="/surveys/new">Create a Survey</a></li>
        <li><a href="/surveys/new">View Profile</a></li>
        <% else %>
        <li><a href="/surveys/all">Take a Survey</a></li>
        <li><a href="/surveys/new">Create a Survey</a></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
<%= erb :_footer %>

