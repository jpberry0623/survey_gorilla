<h3>Signup</h3>

<form action="/users/new" method="post" id="login">
  <input type="text" name="new_user[name]" placeholder="Enter your name" required><br>
  <input type="email" name="new_user[email]" placeholder="Enter your email address" required><br>
  <input type="password" name="new_user[password_digest]" placeholder="Choose a password" required><br>
  <input type="date" name="new_user[birthday]" placeholder="Enter your birthday" required><br>
  <% @regions.each do |reg| %>
  <input type="radio" name="new_user[region_id]" value=<%= reg.id %> required><%= reg.name.capitalize %><br><br>
  <% end %>
  <input type="submit" value="Sign me up">
</form>
